<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#212121"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TelaDaSistema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#585858"
        android:text="   Sistema de Compras"
        android:textColor="#FDFDFD"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ConteudoDaSistema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   Escolha o seu produto"
        android:textColor="#535353" />

    <CheckBox
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FDFDFD"
        android:text="Arroz 1 Kg (R$ 2,69)" />

    <CheckBox
        android:id="@+id/item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FDFDFD"
        android:text="Leite longa vida (R$ 2,70) " />

    <CheckBox
        android:id="@+id/item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FDFDFD"
        android:text="Carne Friboi (R$ 16,70) " />

    <CheckBox
        android:id="@+id/item4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FDFDFD"
        android:text="FeijÃ£o carioquinha 1 Kg (R$ 3,38) " />

    <CheckBox
        android:id="@+id/item5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FDFDFD"
        android:text="Refrigerante coca-cola 2 litros (R$3,00)" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:text="  -----------------------------------------------------------------------------------------------------------" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:text="\n\n

     Total:                                                                                         "
        android:textColor="#FDFDFD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="" />

        <Button
            android:id="@+id/finaliza"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:onClick="OnClick"
            android:text="Total da compra" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="" />
    </LinearLayout>

</LinearLayout>