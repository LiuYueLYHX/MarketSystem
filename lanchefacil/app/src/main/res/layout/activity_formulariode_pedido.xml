<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormulariodePedido">

    <TextView
        android:id="@+id/textselecionar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="    Seleciona seu pedido"
        android:textColor="@color/white"
        android:textSize="20sp"/>


    <EditText
        android:id="@+id/nomeDigite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Digite seu nome" />

    <CheckBox
        android:id="@+id/lanche1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coca-Cola" />

    <CheckBox
        android:id="@+id/lanche2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Batata Frita" />

    <CheckBox
        android:id="@+id/lanche3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hamburguer" />

    <CheckBox
        android:id="@+id/lanche4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arroz" />

    <CheckBox
        android:id="@+id/lanche5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Suco" />

    <CheckBox
        android:id="@+id/lanche6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pastel" />

    <TextView
        android:id="@+id/branco2"
        android:layout_width="match_parent"
        android:layout_height="340dp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/banco"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnResumo"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Button" />

        <TextView
            android:id="@+id/branco1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />
    </LinearLayout>

</LinearLayout>